<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="Source"
	x:Name="Window"
	Title="Source Page"
	Width="640" Height="480" Icon="HTML.png">

	<Grid x:Name="LayoutRoot">
		<Grid.Background>
			<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
				<GradientStop Color="#FF353535" Offset="0.88"/>
				<GradientStop Color="White"/>
			</LinearGradientBrush>
		</Grid.Background>
		<RichTextBox x:Name="RichTextBox_Source" Margin="10" IsDocumentEnabled="True">
			<FlowDocument>
				<Paragraph><Run Text=""/></Paragraph>
			</FlowDocument>
		</RichTextBox>
	</Grid>
</Window>